{{ 'product-card.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }} custom-section">
  <div class="page-width color-{{ section.settings.color_scheme }}">
    <div class="product-collection__header">
      <h2 class="poppins-semibold">{{ section.settings.heading }}</h2>
    </div>
    <div class="btn-group-feature-collection">
      <div class="swiper-btn button--{{ section.id }} swiper-button-prev"></div>
      <div class="swiper-btn button--{{ section.id }} swiper-button-next "></div>
    </div>

    <div class="collection__product-wrapper mySwiper swiper mySwiper-{{ section.id }}">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          {% assign products_per_slide = section.settings.products_per_slide_mobile %}
          {% if screen_size == 'desktop' %}
            {% assign products_per_slide = section.settings.products_per_slide_desktop %}
          {% endif %}

          {% for product in section.settings.collection.products limit: products_per_slide %}
            <a href="#" class="product-card__wrapper custom-card">
              <div class="product-card__img-wrapper">
                <img src="{{ product.featured_image |  img_url: 'medium' }}" class="product-card__img">
              </div>
              <div class="product-card__info">
                <div class="product-card__rating">
                  <div class="product-card__rating-star">
                    {% render 'icon-star' %}
                    {% render 'icon-star' %}
                    {% render 'icon-star' %}
                    {% render 'icon-star' %}
                    {% render 'icon-star' %}
                  </div>

                  <span class="poppins-regular">{{ product.vendor }}</span>

                </div>
                <h6 class="product-card__title poppins-semibold">{{ product.title }}</h6>
                <div class="product-card__info-footer">
                  <span class="poppins-semibold">{{ product.price | money_with_currency }}</span>
                  <button class="product-card__atc-btn poppins-semibold">+ Add to Cart</button>
                </div>
              </div>
            </a>
          {% endfor %}
        </div>
      </div>
    </div>

  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
  const id = "{{ section.id }}";
  
  const swiperClass = `.mySwiper-${id}`;
  const swiperPaginationClass = `.swiper-pagination-${id}`;
  const swiperButtonNextClass = `.button--${id}.swiper-button-next`;
  const swiperButtonPrevClass = `.button--${id}.swiper-button-prev`;

  const swiperContainer = document.querySelector(swiperClass);
  const swiperPagination = document.querySelector(swiperPaginationClass);
  const swiperButtonNext = document.querySelector(swiperButtonNextClass);
  const swiperButtonPrev = document.querySelector(swiperButtonPrevClass);

  if (swiperContainer && swiperPagination && swiperButtonNext && swiperButtonPrev) {
    let swiper = new Swiper(swiperClass, {
      slidesPerView: 1,
      spaceBetween: 10,
      navigation: {
        nextEl: swiperButtonNextClass,
        prevEl: swiperButtonPrevClass,
      },
      pagination: {
        el: swiperPaginationClass,
        clickable: true,
      },
      breakpoints: {
        786: {
          slidesPerView: 1,
          spaceBetween: 10,
        }
      },
      observer: true, 
      observeParents: true,
    });

    swiper.init();
    swiper.update();
  } else {
    console.error('Swiper initialization elements not found for section:', id);
  }
});
</script>


{% schema %}
  {
    "name": "Feature Collection",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "heading",
        "label": "Heading",
        "default": "Heading"
      },
      {
        "type": "range",
        "id": "products_per_slide_mobile",
        "label": "Number of Products per Slide on Mobile",
        "min": 1,
        "max": 4,
        "step": 1,
        "default": 2
      },
      {
        "type": "range",
        "id": "products_per_slide_desktop",
        "label": "Number of Products per Slide on Desktop",
        "min": 1,
        "max": 8,
        "step": 1,
        "default": 4
      },
      {
        "type": "color_scheme",
        "id": "section_color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
      }, {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }, {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.multirow.settings.container_color_scheme.label",
        "default": "scheme-1"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Feature Product Collection"
      }
    ]
  }
{% endschema %}